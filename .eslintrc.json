{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "next/core-web-vitals"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "react-hooks"],
  "rules": {
    "no-dupe-else-if": "warn",
    "max-depth": ["warn", 2],
    "no-unused-vars": "warn",
    "react-hooks/rules-of-hooks": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "no-extra-boolean-cast": "off",
    "key-spacing": [
      "warn",
      {
        "beforeColon": false,
        "mode": "strict"
      }
    ],
    "no-var": "error",
    "quotes": ["warn", "double", { "avoidEscape": true }],
    "eqeqeq": ["warn", "always"],
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "no-debugger": "warn",
    "react/prop-types": "off"
  }
}
